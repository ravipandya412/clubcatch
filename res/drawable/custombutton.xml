<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item android:state_pressed="true">
        <shape android:shape="0">
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#7bc5ea" />
            <gradient android:startColor="#ffffff" android:endColor="#186f9a" android:angle="90.0" android:centerColor="#7bc5ea" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="0">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#99ccff" />
            <solid android:color="#0000cc" />
        </shape>
    </item>
    <item>
        <shape android:shape="0">
            <corners android:radius="40dp" />
            <stroke android:width="0.5dp" android:color="#ffffff" />
            <gradient android:startColor="#7bc5ea" android:endColor="#7bc5ea" android:angle="-90.0" android:centerColor="#186f9a" />
        </shape>
    </item>
</selector>
